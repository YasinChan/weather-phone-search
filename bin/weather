#!/usr/bin/env node

console.log("我是ReedSun，下面由我为您播报天气");

var request = require('request');

request('http://api.jirengu.com/weather.php', function (error, response, body) {
    if (!error && response.statusCode == 200) {
        print(body);
    }
});

function print(json){
	var result = JSON.parse(json)
	console.log("日期：" + result.date);
	console.log("城市：" + result.results.currentCity);
	console.log("pm2.5：" + result.results.pm25);
	console.log("\n\n")
	console.log("以下是近几日天气预报")
	console.log("\n")
	for (var k=0;k<result.results.weather_data.length;k++){
		var foo = result.results.weather_data[k];
		console.log(foo.date, foo.weather, foo.wind, foo.temperature);
	}
	console.log("\n\n")
	console.log("以下是生活指数播报")
	console.log("\n");
	for (var k=0;k<result.results.index.length;k++){
		var bar = result.results.index[k];
		console.log(bar.tipt, bar.des);
	}
}